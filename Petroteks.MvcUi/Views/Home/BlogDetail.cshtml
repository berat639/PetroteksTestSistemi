@model Blog

@inject IWebsiteCookieService websiteCookieService
@{
    Website CurrentWebsite = websiteCookieService.Get("CurrentWebsite");
}
@{
    ViewData["Title"] = Model.Title;
    ViewData["Description"] = Model.Description;
    ViewData["MetaTags"] = $"<meta name='twitter:card' content='summary' /> <meta name='twitter:site' content='{CurrentWebsite.Name}/Blog-Detay-" + Model.id + "'/><meta name='twitter:creator' content='@Petroteks'/> <meta property='og:title' content='" + Model.Name + "'> <meta property='og:type' content='website'> <meta property='og:description' content='" + Model.Name + " ürünleri ve özellikleri'> <meta property='og:image' content='" + @CurrentWebsite.Name + "/BlogImages/" + Model.PhotoPath + $"'> <meta property='og:url' content='{CurrentWebsite.Name}/Blog-Detay-" + Model.id + "'/> <meta property='og:title' content='" + Model.Name + "' />";
    ViewData["Keywords"] = Model.Keywords;
}
@Html.Raw(Model.Content)



